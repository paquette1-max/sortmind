# Stripe Configuration
# Copy this file to .env and fill in your actual values

# Stripe API Keys (from Stripe Dashboard - https://dashboard.stripe.com/apikeys)
# Use TEST keys for development, LIVE keys for production
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product Price IDs (from Stripe Dashboard - Products)
STRIPE_PRO_PRICE_ID=price_1T1E5hP1NrSTB2xSwXMtGn5O
STRIPE_ENT_PRICE_ID=price_1T1E6rP1NrSTB2xSYb584mtC

# Email Configuration
EMAIL_BACKEND=smtp  # Options: smtp, sendgrid, ses

# SMTP Settings (for Gmail)
# 1. Enable 2FA on your Google account
# 2. Generate App Password at: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password below (NOT your regular Gmail password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contact@exemplarembedded.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=contact@exemplarembedded.com

# SendGrid Settings (alternative - https://sendgrid.com)
# SENDGRID_API_KEY=SG.xxx
# SMTP_FROM=noreply@exemplarembedded.com

# AWS SES Settings (alternative)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
# SMTP_FROM=noreply@exemplarembedded.com

# Server Settings
PORT=5000
FLASK_DEBUG=false
